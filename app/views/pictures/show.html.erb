<body class="show_main">

  <div class="image">
      <%= image_tag @picture.url %>
    </div>
    <div class="artist">
      <a href="https://www.instagram.com/alexis_diaz/?hl=en" target='_blank'>@Alexis Diaz</a>
    </div>
  </div>

  <div class="pic-info">

    <h3>
      <!-- <strong>Title:</strong> -->
      <em><%= @picture.title %></em>
    </h3>

    <%= link_to 'Edit', edit_picture_path(@picture) %> |
    <%= link_to 'Delete', @picture, method: :delete, data: { confirm: 'Are you sure?' } %>

    <h4>Add Comment</h4>
    <%= render 'comments/form', comment: @comment %>

    <h4>Comments</h4>

    <% @picture.comments.each do |comment| %>
      <p>
        <strong><%= comment.name %></strong>
        <%= comment.review %>
        <br>
        Added <%= time_ago_in_words comment.created_at %> ago
      </p>
    <% end %>

    <%= link_to 'Edit Picture', edit_picture_path(@picture) %> |
    <%= link_to 'Back', pictures_path %>
  </div>

</body>
